<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@color/light_gray">

    <!--Play/stop button-->
    <!--<ImageView-->
        <!--android:id="@+id/icon"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--/>-->
    <me.lefdef.earamp.CircleButton
        android:id="@+id/icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_action_play"
        app:cb_label=""
        app:cb_color="@color/light_gray"
        app:cb_label_size="24"
        />
    <!--Recording Name-->
    <TextView
        android:id="@+id/rec_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="rec_name"/>

    <!--Recording time length-->
    <TextView
        android:id="@+id/rec_length"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rec_name"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/icon"
        android:textSize="15dp"
        android:text="rec_length"/>
</RelativeLayout>